        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Policy>"
        android:textColor="#EAE1E1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
